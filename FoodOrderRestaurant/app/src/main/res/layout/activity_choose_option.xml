<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp">

    <TextView
        android:id="@+id/lblQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:text="Which Android API You Don't Miss Today?"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAsyncTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Async Task"
        app:layout_constraintTop_toBottomOf="@+id/lblQuestion" />

    <Button
        android:id="@+id/btnFrgTransactions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Fragment Transaction"
        app:layout_constraintTop_toBottomOf="@+id/btnAsyncTask" />

    <Button
        android:id="@+id/btnEclipse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Eclipse"
        app:layout_constraintTop_toBottomOf="@+id/btnFrgTransactions" />

    <Button
        android:id="@+id/btnCursosrs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Cursor and Cursor Adapter"
        app:layout_constraintTop_toBottomOf="@+id/btnEclipse" />

    <Button
        android:id="@+id/btnEverything"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Everything"
        app:layout_constraintTop_toBottomOf="@+id/btnCursosrs" />

</androidx.constraintlayout.widget.ConstraintLayout>