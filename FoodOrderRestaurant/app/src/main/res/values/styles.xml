<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/DialogFragmentStyle</item>
        <item name="text_color_main">@color/neutral1</item>
        <item name="text_size_default">@dimen/sp_14</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:textViewStyle">@style/AppTheme.TextView</item>
        <item name="editTextStyle">@style/editTextStyleDefault</item>
        <item name="buttonStyle">@style/AppTheme.CommonButton</item>
        <item name="buttonBarButtonStyle">@style/AlertDialogButton</item>
        <item name="android:buttonBarButtonStyle">@style/AlertDialogButton</item>
        <item name="toolbarStyle">@style/AppTheme.Toolbar</item>
        <item name="android:navigationBarColor">@android:color/white</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <!-- Add these -->
        <item name="materialCalendarStyle">@style/Widget.MaterialComponents.MaterialCalendar</item>
        <item name="materialCalendarFullscreenTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar.Fullscreen</item>
        <item name="materialCalendarTheme">@style/ThemeOverlay.MaterialComponents.MaterialCalendar</item>

    </style>

    <style name="AppTheme.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextAppearance">@style/AppTheme.TextView.Title1</item>
        <item name="titleTextColor">@color/primary2</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="DialogFragmentStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">95%</item>
        <item name="android:windowMinWidthMinor">95%</item>
    </style>

    <style name="AppTheme.TextView" >
        <item name="android:includeFontPadding">true</item>>
        <item name="android:textSize">?attr/text_size_default</item>
        <item name="android:textColor">?attr/text_color_main</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
    </style>

    
    <style name="editTextStyleDefault" parent="@style/Widget.AppCompat.EditText">
        <!--<item name="android:minHeight">@dimen/min_button_width</item>-->
        <!--<item name="android:fontFamily">@font/montserrat</item>-->
        <!--<item name="android:background">@drawable/bg_edittext</item>-->
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/neutral4</item>
    </style>

    <style name="SMBButtonStyle" parent="@style/Widget.AppCompat.Button">
        <item name="android:minHeight">@dimen/dp_48</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textColor">?attr/text_color_main</item>
<!--        <item name="android:fontFamily">@font/helvetica</item>-->
    </style>

    <style name="AppTheme.CommonButton" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:minWidth">@dimen/min_button_width</item>
        <item name="android:background">@drawable/bg_common_button_selector</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textSize">@dimen/sp_17</item>
        <item name="android:lineSpacingExtra">@dimen/textView_button_shape_lice_spacing</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">@dimen/dp_08</item>
        <item name="android:paddingEnd">@dimen/dp_08</item>
        <item name="android:minHeight">@dimen/button_large_height</item>
        <item name="android:maxHeight">@dimen/button_large_height</item>
        <item name="textAllCaps">false</item>
    </style>
    
    <style name="AppTheme.CommonButton.secondary">
        <item name="android:background">@drawable/bg_common_button_secondary</item>
        <item name="android:textColor">@color/primary4</item>
    </style>

    <style name="AppTheme.CommonButton.small.secondary">
        <item name="android:background">@drawable/bg_common_button_secondary</item>
        <item name="android:textColor">@color/primary4</item>
    </style>

    <style name="AppTheme.CommonButton.small">
        <item name="android:layout_height">@dimen/button_small_height</item>
        <item name="android:maxHeight">@dimen/button_small_height</item>
        <item name="android:minHeight">@dimen/button_small_height</item>
        <item name="android:textSize">@dimen/textView_button_2</item>
        <item name="minHeight">@dimen/button_small_height</item>
    </style>
    <style name="ButtonScreenDetail" parent="AppTheme.CommonButton">
        <item name="android:minWidth">100dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="AlertDialogButton" parent="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">?attr/colorControlNormal</item>
    </style>

    <style name="TextFloatLabelAppearance" parent="@style/AppTheme.TextView.Caption1">
        <item name="android:textColor">@color/neutral3</item>
    </style>

    <style name="Widget.MaterialComponents.Button.TextButton.OnBoardTextButton"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPurple</item>
    </style>

    <style name="CustomChipChoice" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/bg_chip_choice</item>
        <item name="shapeAppearance">@style/ShapeAppearance.CustomChipChoice</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="ShapeAppearance.CustomChipChoice" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/dp_08</item>
    </style>

    <style name="CalenderViewCustom" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/primary2</item>
        <item name="colorAccent">@color/gradient_2_end</item>
        <item name="android:textColorPrimary">@color/primary2</item>
        <item name="android:textColorPrimaryInverse">@android:color/white</item>
        <item name="android:textColor">@color/colorPrimary</item>
    </style>
    <style name="CalenderViewDateCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/primary2</item>
    </style>

    <style name="CalenderViewWeekCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/neutral3</item>
    </style>

    <style name="CalenderViewTimeCustomText" parent="android:TextAppearance.DeviceDefault.Small">
        <item name="android:textColor">@color/primary2</item>
    </style>

    <style name="DatePickerCustomStyle" parent="Platform.MaterialComponents.Light">
        <item name="colorAccent">@color/primary2</item>
        <item name="android:headerBackground">@color/primary2</item>
        <item name="colorPrimary">@color/primary2</item>
        <item name="android:textColorPrimary">@color/primary2</item>
        <item name="android:textColor">@color/colorPrimary</item>

        <item name="android:colorAccent">@android:color/white</item>
        <item name="android:colorControlActivated">@color/shades7</item>

        <item name="android:textColorPrimaryInverse">@color/primary2</item>
        <item name="android:textColorSecondaryInverse">@color/primary2</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="shapeAppearance24" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/dp_24</item>
        <item name="cornerSizeTopRight">@dimen/dp_24</item>
    </style>
    <style name="CustomTextTabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>